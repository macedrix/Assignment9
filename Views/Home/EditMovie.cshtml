@model Movie

<h1 class="text-center">Edit Movie</h1>

<!--Form with the values prepopulated, but can be changed-->
<div class="align-content-center align-items-center modal-dialog-centered justify-content-center text-white">
    <!--Send in new information to update for this movie-->
    <form class="rounded" style="padding: 50px; background-color: #f6b55f" asp-action="UpdateMovie" method="post">
        <input asp-for="MovieId" type="hidden" />
        <div class="row m-1 p-1">
            <div class="col-6 float-left">
                <label style="width: 150px" asp-for="Category">Category</label>
                <input class="input-group-text" asp-for="Category" />
                <br />
                <label style="width: 150px" asp-for="Title">Movie Title</label>
                <input class="input-group-text" asp-for="Title" />
                <br />
                <label style="width: 150px" asp-for="Year">Year</label>
                <input class="input-group-text" asp-for="Year" />
                <br />
                <label style="width: 150px" asp-for="Director">Director Name</label>
                <input class="input-group-text" asp-for="Director" />
            </div>
            <div class="col-6 float-right">
                <label style="width: 150px" asp-for="Rating">Rating</label>
                <select class="input-group-text" asp-for="Rating">
                    <option disabled>Select One</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
                <br />
                <label style="width: 150px" asp-for="Edited">Edited?</label>
                <input class="input-group-text" type="checkbox" asp-for="Edited" />
                <br />
                <br />
                <label style="width: 150px" asp-for="LentTo">Lent to...</label>
                <input class="input-group-text" asp-for="LentTo" />
                <br />
                <label style="width: 150px" asp-for="Notes">Notes</label>
                <input class="input-group-text" asp-for="Notes" />
            </div>

        </div>
        <br />
        <div class="row text-center">
            <button style="width:200px" class="btn bg-white text-dark col-12" type="submit">Submit Edits</button>
        </div>

        <div asp-validation-summary="All"></div>
    </form>
</div>